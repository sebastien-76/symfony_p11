{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <h1>Tag</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tag.description }}</td>
            </tr>
            <tr>
                <th>Projects</th>
                <td>
                    {% for project in tag.projects %}
                     {# chemin vers nom du chemin et param√®tre (id) #}
                        <a href="{{path('app_admin_project_show', {id: project.id }) }}">{{ project.name }}</a>
                        {% if not loop.last %},{% endif %}
                    {% endfor %}

                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_tag_index') }}">back to list</a>

    <a href="{{ path('app_admin_tag_edit', {'id': tag.id}) }}">edit</a>

    {{ include('admin/tag/_delete_form.html.twig') }}
{% endblock %}
